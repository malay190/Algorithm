class Solution {
public:
    int longestConsecutive(vector<int>& nums) {
        if(nums.empty()) return 0;
        sort(nums.begin(), nums.end());
        int n = nums.size();
        int max_len = 1;
        int curr_len = 1;
        for(int i=1; i<n; i++){     
            if(nums[i]!=nums[i-1]){
                if(nums[i] == nums[i-1]+1){
                    curr_len++;
                }
                else{        
                    max_len = max(curr_len, max_len);
                    curr_len=1;
                }
            }
        }
        return max(curr_len, max_len);
    }
};